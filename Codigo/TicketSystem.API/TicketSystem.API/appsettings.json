{
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1,1433;Database=TicketSystemDB;User Id=sa;Password=bancofoda1020;TrustServerCertificate=True;MultipleActiveResultSets=True;"
  },
  "Jwt": {
    "Key": "TicketSystem2024SuperSecretKeyForJWT!@#$%MinimumOf256BitsRequired",
    "Issuer": "TicketSystemAPI",
    "Audience": "TicketSystemClient",
    "ExpiryInHours": 24
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:8080",
      "http://127.0.0.1:8080"
    ]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowMinutes": 1,
    "QueueLimit": 0
  },
  "Application": {
    "Name": "Ticket System API",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "Features": {
    "EnableSwagger": true,
    "EnableCors": true,
    "EnableDetailedErrors": true
  }
}